{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "pythonVersion": "3.11"
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "DJANGO_SETTINGS_MODULE=socialsync.settings daphne -b 0.0.0.0 -p $PORT socialsync.asgi:application",
        "sleepApplication": false,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}